# Email Configuration for Contact Form
# Copy this to your .env.local file and update with your actual values

# Admin Backend Configuration
ADMIN_BACKEND_URL=http://localhost:8000
ADMIN_API_KEY=your_admin_api_key_here

# Admin Email Address (where inquiries will be sent)
ADMIN_EMAIL=admin@yuumpy.com

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Email System Integration
# The contact form will send emails to your admin backend at:
# POST {ADMIN_BACKEND_URL}/api/contact-notification
# POST {ADMIN_BACKEND_URL}/api/user-confirmation
#
# Expected request format:
# {
#   "type": "advertising_inquiry" | "advertising_confirmation",
#   "to": "email@example.com",
#   "subject": "Email Subject",
#   "data": {
#     "name": "John Doe",
#     "email": "john@example.com",
#     "company": "Company Name",
#     "phone": "+1234567890",
#     "adType": "top-position",
#     "message": "Inquiry message...",
#     "submittedAt": "1/15/2024, 10:30:00 AM"
#   }
# }
